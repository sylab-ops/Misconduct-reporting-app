<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DiaryHistoryActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@drawable/user_img"
            app:civ_border_color="#ffff"
            app:civ_border_width="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:text="Welcome, Olivia!"
            android:textAlignment="center"
            android:textColor="#ffff"
            android:textSize="16dp">

        </TextView>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="501dp"
        android:layout_height="440dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.52">

        <TextView
            android:id="@+id/textView"
            android:layout_width="390dp"
            android:layout_height="26dp"
            android:layout_marginStart="21dp"
            android:text="Physical"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="218dp">></TextView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="254dp"
            android:text="Created on: 17.03.2021"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></TextView>


        <Button
            android:layout_width="108dp"
            android:layout_height="45dp"
            android:layout_marginStart="194dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            android:text="view"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintStart_toStartOf="@+id/textView"
            tools:ignore="MissingConstraints"></Button>

        <ImageView
            android:layout_width="81dp"
            android:layout_height="52dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_share_black_24dp"
            tools:ignore="MissingConstraints"></ImageView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="501dp"
        android:layout_height="440dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="91dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.52">

        <TextView
            android:layout_width="390dp"
            android:layout_height="26dp"
            android:layout_marginStart="21dp"
            android:text="Physical"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="218dp">></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="254dp"
            android:text="Created on: 17.03.2021"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"></TextView>


        <Button
            android:layout_width="108dp"
            android:layout_height="45dp"
            android:layout_marginStart="194dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/rounded_button"
            android:text="view"
            android:textColor="@color/colorWhite"
            tools:ignore="MissingConstraints"></Button>

        <ImageView
            android:layout_width="81dp"
            android:layout_height="52dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_share_black_24dp"
            tools:ignore="MissingConstraints"></ImageView>


    </RelativeLayout>


    <Button
        android:id="@+id/btnNext"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="265dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="73dp"
        android:background="@drawable/circle_button"
        android:text="+"
        android:textSize="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>